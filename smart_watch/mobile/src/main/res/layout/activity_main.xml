<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/vertical_margin"
    android:paddingLeft="@dimen/horizontal_margin"
    android:paddingRight="@dimen/horizontal_margin"
    android:paddingTop="@dimen/vertical_margin"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/labelIpAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adresse du serveur :"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextIp"
        android:layout_width="367dp"
        android:layout_height="40dp"
        android:text="192.168.43.238:8282" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="connectToServer"
        android:text="Se connecter" />

    <Button
        android:id="@+id/buttonStartRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gameStart"
        android:text="Simulated start run" />

    <Button
        android:id="@+id/buttonEndRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="gameEnd"
        android:text="Simulated end run" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="restartGame"
        android:text="Restart game" />


</LinearLayout>